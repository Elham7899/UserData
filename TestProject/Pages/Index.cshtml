@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Bootstrap demo</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
	<div id='message' style="display: none;">
		<span>The user was successfully registered.</span>
		<a href="#" class="close-notify">X</a>
	</div>
	<div>
		<div class="container text-center">
			<div class="row align-items-center">
				<div class="col">
					<label for="FirstName" class="sr-only">Search</label>
				</div>
				<div class="col">
					<input type="text" class="form-control" id="FirstName" placeholder="FirstName">
				</div>
				<div class="col">
					<button type="button" class="btn btn-primary mb-2" id="btn_Search">Search</button>
					<button type="button" class="btn btn-primary mb-2" id="btn_refresh">Refresh</button>
					<button type="button" class="btn btn-primary mb-2" id="btn_Add">Add</button>
				</div>
			</div>
		</div>
		<br />
		<div class="panel panel-primary">
			<div class="panel-body">
				<table class="table table-bordered " id="Table">
					<thead>
						<tr>
							<th>Id</th>
							<th>FirstName</th>
							<th>LastName</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody id="tbody">
					</tbody>
				</table>
			</div>
		</div>
		<nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center" id="pagination_contianer">
			</ul>
		</nav>
		<div class="d-grid gap-2 col-3 mx-auto">
			<button class="btn btn-outline-primary btn-sm" id="btnShowChild" type="button">ShowName</button>
			<button class="btn btn-outline-primary btn-sm" id="btnAddChild" type="button">AddNew</button>
		</div>
		<br />
		<div class="panel panel-primary">
			<div class="panel-body">
				<table class="table table-bordered " id="child_table">
					<thead>
						<tr>
							<th>Id</th>
							<th>FirstName</th>
							<th>LastName</th>
							<th>#</th>
						</tr>
					</thead>
					<tbody id="child_tbody">
					</tbody>
				</table>
			</div>
		</div>
		<div class="modal fade" id="myModal" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
					</div>
					<div class="modal-body">
						<label for="edit-fname">FirstName</label>
						<input type="text" id="edit-fname">
						<br>
						<label for="edit-lname">LastName</label>
						<input type="text" id="edit-lname">
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default save" data-dismiss="modal">Save</button>
						<button type="button" class="btn btn-default close" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
		<nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center" id="childpagination_contianer">
			</ul>
		</nav>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>